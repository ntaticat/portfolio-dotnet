@model List<ProjectViewModel>

@{
    ViewData["Title"] = "Proyectos - Rafael Estrada";
    Layout = "~/Views/Home/_HomeLayout.cshtml";
}

<div class="row mx-0 bg-light bg-opacity-75 text-dark rounded mt-3">
    <div class="col-12 pt-3">
        <p class="fs-5 mb-0">Projects</p>
    </div>
    <div class="col-12 p-0">
        <div class="row mx-0">
            @foreach (var project in Model)
            {
                <div class="col-12 p-2">
                    <div class="card bg-dark bg-opacity-75 text-light">
                        <div class="row mx-0 align-items-stretch">
                            <div class="order-2 order-lg-1 col-12 col-lg-7 px-0">
                                <div class="card-body">
                                    <h5 class="card-title">@project.ProjectName</h5>
                                    <p class="card-text">
                                        @project.ProjectDescription
                                    </p>
                                    <p>
                                            @if (project.tags != null)
                                            {
                                                @foreach (var tag in project.tags)
                                                {
                                                <span class="badge rounded-pill bg-secondary text-uppercase">@tag</span>
                                                }
                                            }
                                    </p>
                                    @if (project.ProjectDeployedLink != "")
                                    {
                                        <a href="@project.ProjectDeployedLink" target="_blank"
                                        class="btn btn-danger card-link">Ver</a>
                                    }
                                    <a href="@project.ProjectGithubLink" target="_blank"
                                        class="btn btn-danger card-link">Repositorio</a>
                                </div>
                            </div>
                            <div class="order-1 order-lg-2 col-12 col-lg-5 px-0 bg-black bg-opacity-50 d-flex flex-column justify-content-center">
                                <img src="@project.ProjectImage" class="w-100 ratio ratio-1x1 object-fit-cover"
                                    alt="Screenshot of project called @project.ProjectName">
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>